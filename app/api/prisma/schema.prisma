generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./garimpo.db"
  // url      = env("DATABASE_URL")
}

model Aluno {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  cadeiras   Cadeira[]
  perfil Perfil?
}

model Perfil {
  id     Int     @id @default(autoincrement())
  bio    String?
  fau    String?
  curso  String?
  year   Int?
  aluno   Aluno    @relation(fields: [alunoId], references: [id])
  alunoId Int     @unique
}
