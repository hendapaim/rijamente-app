model Cadeira {
  id        Int     @id @default(autoincrement())
  title     String  @unique
  mateira   Materia[]
  author    Aluno?   @relation(fields: [authorId], references: [id])
  authorId  Int?
}

model Materia {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  cadeira    Cadeira   @relation(fields: [cadeiraId], references: [id])
  cadeiraId  Int
}
